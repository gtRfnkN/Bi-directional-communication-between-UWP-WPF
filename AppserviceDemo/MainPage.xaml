<Page
    x:Class="AppserviceDemo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppserviceDemo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="157*"/>
        </Grid.RowDefinitions>
        <Button IsEnabled="False" x:Name="SendButton" Content="Send Data to WPF" HorizontalAlignment="Stretch" Margin="35,35,35,5" VerticalAlignment="Stretch" Click="SendButton_Click"/>

        <ScrollViewer Margin="40,30,43,40" Height="715" Width="1417" HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch">
            <StackPanel>
                <TextBlock x:Name="ResultText" HorizontalAlignment="Left" Margin="0,0,0,0" Text="Result: none" TextWrapping="Wrap" VerticalAlignment="Top" Width="1417"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
